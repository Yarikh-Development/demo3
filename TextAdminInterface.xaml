        <Grid x:Name="ZPL" Grid.Row="1" Background="White" VerticalAlignment="Top" Visibility="Visible">


            <ListView x:Name="listView" VerticalAlignment="Top" BorderThickness="0" Foreground="#FFFFFF">
                <ListView.View>
                    <!--设置列标签并将列成员与一个变量名称相绑定，以便后台链接修改-->
                    <GridView>
                        <GridViewColumn Header="指令" Width="300" DisplayMemberBinding="{Binding Path=Direct}"/>
                        <GridViewColumn Header="说明" Width="200" DisplayMemberBinding="{Binding Path=Explain}"/>
                        <GridViewColumn Header="设置" Width="200" DisplayMemberBinding="{x:Null}">

                            <!--<StackPanel Orientation="Horizontal">
