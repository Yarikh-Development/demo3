<Page x:Class="demo.TextPicturesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:demo"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PicturesPage" Height="600" Width="880">

    <Border BorderBrush="#A8A4AD" BorderThickness="1">


        <Grid Height="auto" Width="auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="9*" />
                <RowDefinition Height="91*" />
                <RowDefinition Height="34*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" >

                <StackPanel Orientation="Horizontal" Width="auto" Height="auto">

                    <!--<Menu>-->
                        <!--<MenuItem>-->

                    <!--<MenuItem x:Name="Auto_MenuItem" Header="自动打印" IsCheckable="True" Click="AutoPrint" IsChecked="True"></MenuItem>-->
                    <MenuItem x:Name="Auto_MenuItem" Header="自动打印" Focusable="True" IsCheckable="True" Click="PrintModeClick" IsChecked="True"></MenuItem>
                    <MenuItem x:Name="Manual_MenuItem" Header="手动打印" IsCheckable="True" Click="PrintModeClick"></MenuItem>
                    <!--<RadioButton x:Name="Auto_MenuItem" Content="自动打印" Click="PrintModeClick" IsChecked="True"></RadioButton>
                    <RadioButton x:Name="Manual_MenuItem" Content="手动打印" Click="PrintModeClick"></RadioButton>-->
                    <MenuItem x:Name="Start_Print_MenuItem" Click="PrintClick" Header="开始打印" Height="auto" Width="auto" IsEnabled="False" />
                    <TextBlock x:Name="State_TextBox" Height="auto" Width="auto" Foreground="OrangeRed"/>

                        <!--</MenuItem>-->
                    <!--</Menu>-->

                </StackPanel> 

            </Grid>


            <Grid Grid.Row="1" Margin="0,0,0,123" Grid.RowSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="418*" />
                    <RowDefinition Height="35*" />
                </Grid.RowDefinitions>

                <Image x:Name="EE_Piceture_Image" Grid.Column="0" Grid.Row="0" Margin="5"/>
                <Button x:Name="EE_Picture_Change_Button" Grid.Column="0" Grid.Row="1" Content="能效图片" Click="PictureChangeButtonClick" Margin="116,7,116,7.8" IsEnabled="False"/>
                <Image x:Name="Overprint_Picture_Image" Grid.Column="1" Grid.Row="0" Margin="5"/>
                <Button x:Name="Overprint_Picture_Change_Button" Grid.Column="1" Grid.Row="1" Content="套打图片" Click="PictureChangeButtonClick" Margin="116,7,116,7.8" IsEnabled="False"/>
                <Image x:Name="Preview_Picture_Image" Grid.Column="2" Grid.Row="0" Margin="5"/>
                <Button x:Name="Preview_Picture_Change_Button" Grid.Column="2" Grid.Row="1" Content="预览图片" Click="PictureChangeButtonClick" Margin="116,7,116,7.8" IsEnabled="False"/>
            </Grid>

            <Grid Grid.Row="2" Margin="0,33.8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="263*" />
                    <ColumnDefinition Width="465*" />
                    <ColumnDefinition Width="149*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock Text="能效编号" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" Height="23" Width="65" FontSize="16" Margin="108,11,90.333,5.111"  />
                <TextBox x:Name="EE_Number_TextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Grid.Row="0" IsReadOnly="False" Height="32"  Width="593"  FontSize="22" Grid.ColumnSpan="2" Margin="10.667,4,10.333,3.111" />
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="1" Height="21"  Width="65" Margin="108,8.889,90.333,9.444" FontSize="16" ><Run Text="套打"/><Run Text="编号"/></TextBlock>
                <TextBox x:Name="Overprint_Number_TextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" IsReadOnly="True" Height="30"  Width="593" FontSize="22" Grid.ColumnSpan="2" Margin="10.667,4.889,10.333,4.444"  />
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="2" Height="21"  Width="65" FontSize="16" Margin="108,8.556,90.333,9.778" ><Run Text="预览"/><Run Text="编号"/></TextBlock>
                <TextBox x:Name="Preview_Number_TextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Grid.Row="2" IsReadOnly="True" Height="32"  Width="593" FontSize="22" Grid.ColumnSpan="2" Margin="10.667,3.556,10.333,3.778"  />
            </Grid>
        </Grid>
    </Border>
</Page>
