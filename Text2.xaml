        <!--方法2点击之后无法移动“常用指令”-->
        <pu:DropDown HorizontalAlignment="Right"
                                         VerticalAlignment="Top"
                                         Margin="0,20,40,0">
            <pu:DropDown.Content>
                <Grid Width="100">
                    <TextBlock Height="30"
                        Text="常用指令"
                        Width="80"
                        Background="SkyBlue"
                        HorizontalAlignment="Center"
                        FontSize="20">
                    </TextBlock>
                </Grid>
            </pu:DropDown.Content>
            <pu:DropDown.Child>
                <Grid Height="170"
                                          Width="200">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    
                    <Border VerticalAlignment="Bottom"
                            BorderBrush="#EEEEEE"
                            BorderThickness="0,0,0,1" />
                    
                    <Grid Grid.Row="0" Margin="15,0">
                        <TextBlock 
                            VerticalAlignment="Center"
                            Foreground="Gray"
                            Text="Enabled" />
                        <Button VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Content="复制"/>
                    </Grid>
                    
                    <Border Grid.Row="0"
                            VerticalAlignment="Bottom"
                            BorderBrush="#EEEEEE"
                            BorderThickness="0,0,0,1" />
                    
                    <Grid Grid.Row="1" Margin="15,0">
                        <TextBlock VerticalAlignment="Center"
                                   Foreground="Gray"
                                   Text="Notifycation" />
                        <Button VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Content="复制"/>
                    </Grid>
                    
                    <Border Grid.Row="1"
                            VerticalAlignment="Bottom"
                            BorderBrush="#EEEEEE"
                            BorderThickness="0,0,0,1" />

                </Grid>
            </pu:DropDown.Child>
        </pu:DropDown>

