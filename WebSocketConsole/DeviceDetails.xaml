<Window x:Class="WebSocketConsole.DeviceDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebSocketConsole"
        mc:Ignorable="d"
        Title="DeviceDetails" Height="450" Width="800" Background="#F0F0F0" ResizeMode="CanResizeWithGrip"
        Loaded="Window_Loaded">
    <Grid Margin="10" >
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <GroupBox Header="Data to Send:">
            <TextBox Name="txtDataToSend" Margin="5" AcceptsReturn="True"  VerticalScrollBarVisibility="Visible"/>
        </GroupBox>

        <Border CornerRadius="3" Grid.Row="1" Margin="5" Background="#E0E0E0">
            <StackPanel Orientation="Horizontal"  HorizontalAlignment="Right">
                <Button Name="button1" Click="button1_Click" Content="Send To" Width="100" Margin="0 5" FontWeight="Bold"/>
                <TextBox Name="txtSendToDeviceSN" Width="200" Margin="5"/>
                <TextBlock Text="(Printer SN)" VerticalAlignment="Center" Margin="0 0 10 0"/>
            </StackPanel>
        </Border>

        <GroupBox Header="Data Received:" Grid.Row="2">
            <TextBox Name="txtReceived" IsReadOnly="True" Background="#F0F0F0" Margin="5" BorderBrush="#434343" VerticalScrollBarVisibility="Visible"/>
        </GroupBox>
    </Grid>
</Window>
